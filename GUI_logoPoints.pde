class logo_points {
  int ID;

  int defPosX;
  int defPosY;

  int positionX;
  int positionY;

  public logo_points(int tid, int x, int y) {
    positionX = x;
    positionY = y;
    ID = tid;

    defPosX = positionX;
    defPosY = positionY;
  }

  void display() {

    stroke(0, 255, 255, transLO);

    strokeWeight(5);
    point(positionX+MS.logoposX, positionY+MS.logoposY);
    strokeWeight(1);
  }

  void displayCode() {
    println("points.add(new logo_points("+ID+","+positionX+","+positionY+"));");
  }
  void changePosition() {

    float t = millis()/1000.0f;
    positionX = (int)(defPosX+random(10)*cos(t));
    positionY = (int)(defPosY+random(10)*sin(t));
  }
}